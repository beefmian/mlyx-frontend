doctype html
html(lang='zh-cn')
  head
    include ../partials/head.pug
    block title
      title #{config.name}
    link(rel='stylesheet' href=config.assets + '/css/main.css?v=' + config.version)
    block styles
    script(src=config.common_assets + '/components/jquery/v1/jquery.js')
    script(src=config.common_assets + '/js/login.js?v=' + config.version)
    script.
      var GAME_ID = #{config.gid};
  body.body
    include ../partials/nav.pug
    #wrapper.wrapper
      .col-1.left-content
        include ../partials/login.pug
        include ../partials/server.pug
        include ../partials/associated.pug
      .col-2.main-content
        block content
        include ../partials/links.pug
      include ../partials/gift.pug
    include ../partials/footer.pug
    include ../partials/stats.pug
    block scripts
    include ../../../common/views/analytics.pug